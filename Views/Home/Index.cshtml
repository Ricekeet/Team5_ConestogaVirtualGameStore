@{
    ViewData["Title"] = "Home Page";
}

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Game Virtual Store</h1>
            <p class="lead fw-normal text-white-50 mb-0">Shop the latest games in our Conestoga Virtual Game Store</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <h2>Events</h2>
        @if (User.IsInRole("Admin"))
        {
            <div style="text-align: right;">
                <a class="btn btn-outline-dark text-light bg-primary mt-auto" asp-action="CreateEvent">Add Event</a>
            </div>
        }
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Event image-->
                    <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                    <!-- Event details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Event name-->
                            <h5 class="fw-bolder">Event 1</h5>
                            <!-- Event Date-->
                            2021-10-9 ~ 2021-10-20
                        </div>
                    </div>
                    <!-- Event actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Enroll Event</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>