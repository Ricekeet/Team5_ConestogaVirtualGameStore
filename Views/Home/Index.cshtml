@model IEnumerable<Team5_ConestogaVirtualGameStore.Models.Game>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Conestoga Virtual Game Store</h1>
            <p class="lead fw-normal text-white-50 mb-0">Shop the latest games in our Conestoga Virtual Game Store</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <h1>Browse Games</h1>

    <p>To shop these games, click here: <a asp-action="Index" asp-controller="Game">Game Store</a></p>
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <!-- Product price-->
                                $@Html.DisplayFor(modelItem => item.Price)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>