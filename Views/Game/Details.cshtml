@model Team5_ConestogaVirtualGameStore.Models.Game

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content -->
<div class="container">

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Portfolio Item Heading -->
        <h1 class="my-4">
            <!-- localStorage FindByID-->
            <!-- if member -->
            @Html.DisplayFor(model => model.Name)
            <!-- else admin -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input />
        </h1>

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid" src="https://via.placeholder.com/750x500" alt="">
                <input type="file" />
            </div>

            <div class="col-md-4">
                <input hidden />

                <h3 class="my-3">Release Date</h3>
                <p>
                    @Html.DisplayFor(model => model.ReleaseDate)
                </p>

                <div class="form-group">
                    <label asp-for="ReleaseDate" class="control-label"></label>
                    <input asp-for="ReleaseDate" class="form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>

                <h3 class="my-3">Description</h3>
                <p>
                    @Html.DisplayFor(model => model.Description)
                </p>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <h3 class="my-3">Price</h3>
                <p>
                    <span>$</span>@Html.DisplayFor(model => model.Price)
                </p>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <h3 class="my-3">Project Details</h3>
                <ul>
                    <li>
                        <span>Platform: </span>
                        @Html.DisplayFor(model => model.Platform.Name)
                    </li>
                    <li>Dolor Sit Amet <input /></li>
                    <li>Consectetur <input /></li>
                    <li>Adipiscing Elit <input /></li>
                </ul>
            </div>

        </div>
        <!-- Reviews -->
        <div class="row">

            <h4>Reviews</h4>
            <label for="message">Message</label>
            <textarea name="msg"
                      id="msg"
                      cols="30"
                      rows="5"
                      class="form-control"></textarea>
            <button>Send Review</button>
        </div>

        <div class="row">
            <div class="comment mt-4 text-justify float-left">
                <img src="https://i.imgur.com/yTFUilP.jpg" alt="" class="rounded-circle" width="40" height="40">
                <b>Jhon Doe</b> <span>- 20 October, 2018</span> <br>
                <span><span>Status: Pending... </span> <a href="#">Accept</a> <a href="#">Decline</a></span>
                <p>
                    Review
                </p>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>
<!-- container -->
<div>
    <a asp-action="Edit" asp-route-id="@Model.GameId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
