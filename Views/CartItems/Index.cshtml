@model IEnumerable<Team5_ConestogaVirtualGameStore.Models.CartItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
            <td>
                <a asp-action="Details" asp-route-id="@item.GameId">@Html.DisplayFor(modelItem => item.GameId)</a>
                
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
